<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <!-- Set the thickness and color of the background track -->
            <solid android:color="@android:color/transparent" /> <!-- Adjust color -->

        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <!-- Set the thickness and color of the progress track -->
                <solid android:color="#ffffff" /> <!-- Adjust color -->
            </shape>
        </clip>
    </item>
</layer-list>